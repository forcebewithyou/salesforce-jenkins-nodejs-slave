apiVersion: v1
kind: Template
labels:
  template: jenkins-nodejs-slave-builder
metadata:
  annotations:
    description: Provide a convenient way to convert an image to a Jenkins slave image
    iconClass: icon-jenkins
    tags: instant-app,jenkins
  name: jenkins-nodejs-slave-builder
objects:
- apiVersion: v1
  kind: ImageStream
  metadata:
    annotations:
      slave-directory: /var/lib/jenkins
      slave-label: ${SLAVE_LABEL}
    labels:
      role: jenkins-nodejs-slave
    name: jenkins-slave-${SLAVE_LABEL}:latest
  spec: {}
- apiVersion: v1
  kind: BuildConfig
  metadata:
    annotations:
      description: Modifies the ${IMAGE_PATH} to run as Jenkins slave
    labels:
      name: ${SLAVE_LABEL}-slave
    name: jenkins-slave-${SLAVE_LABEL}
  spec:
    output:
      to:
        kind: ImageStreamTag
        name: jenkins-slave-${SLAVE_LABEL}:latest
    resources: {}
    source:
      contextDir: ${SLAVE_REPO_CONTEXTDIR}
      git:
        ref: ${SLAVE_REPO_REF}
        uri: ${SLAVE_REPO_URL}
      type: Git
    strategy:
      dockerStrategy:
        from:
          kind: DockerImage
          name: ${IMAGE_PATH}
      type: Docker
    triggers:
    - type: ConfigChange
parameters:
- description: The name of an image to convert to a Jenkins slave image.
  displayName: Image Name
  name: IMAGE_PATH
  required: true
  value: quay.io/openshift/origin-jenkins-agent-nodejs
- description: Label for slave pods which are used by Jenkins to discover slave pods and assign jobs to them
  displayName: Jenkins Slave Label
  name: SLAVE_LABEL
  required: true
  value: sfdx
- description: Git repository with Dockerfile and slave entrypoint.
  displayName: Repository URL
  name: SLAVE_REPO_URL
  value: https://github.com/forcebewithyou/salesforce-jenkins-nodejs-slave.git
- description: The sub-directory inside the repository.
  displayName: Context Directory
  name: SLAVE_REPO_CONTEXTDIR
  value: /
- description: The git ref or tag to use for customization.
  displayName: Git Reference
  name: SLAVE_REPO_REF
  value: openshift3
- description: The OpenShift Namespace ImageStream resides.
  displayName: Jenkins ImageStream Namespace
  name: NAMESPACE
  value: salesforce-dev